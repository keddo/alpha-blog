<% obj.each do |article| %>
    <div class="row mb-3">
      <div class="col-md-8 offset-md-2">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
              <p class="card-text"><%= truncate(article.description, length: 100)%>
                <p class="article-meta-details"> 
                <small> Created by: <%= article.user ? article.user.username : "Unknown User" %>, <%= time_ago_in_words(article.created_at) %> ago, 
                Last updated: <%= time_ago_in_words(article.updated_at) %> ago </small>
                </p>
              </p>
              <% if logged_in? && current_user == article.user %>
              <%= link_to 'Edit article', edit_article_path(article), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Delete this article', article_path(article), class: 'btn btn-danger btn-sm', method: :delete, 
                                      data: {confirm: "Are you sure you want to delete the article?"} %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
<%end%>