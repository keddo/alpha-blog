<h1 class="text-center mb-3"> All Alpha Bloggers</h1>
<div align="center">
<%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
<% @users.each do |user| %>
  <div class="row mb-5">
    <div class="col-md-6 offset-md-3">
    <div class="card p-3">
    <div class="media">
    <%= link_to gravatar_for(user), user_path(user), class: 'mr-3' %>
    <div class="media-body">
      <h5 class="mt-0"><%= link_to user.username, user_path(user) %></h5>
       <ul class="list-group">
       <li class="list-group-item">
          <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
       </li>
       </ul>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
<div align="center">
<%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>