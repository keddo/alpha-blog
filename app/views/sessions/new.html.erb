<h2 class="text-center">Login</h2>
<div class="row">
   <div class="col-md-2"></div>
   <div class="col-md-8">
      <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group row">
      <%= f.label :email, class: 'col-md-2 col-form-label'%>
      <div class="col-md-8">
         <%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>
      </div>
      </div>
      <div class="form-group row">
      <%= f.label :password, class: 'col-md-2 col-form-label'%>
      <div class="col-md-8">
         <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
      </div>
         <div class="form-group row">
            <div class="offset-sm-2 col-md-6">
            <%= f.submit "Log in", class: "btn btn-primary gtn-lg" %>
            </div>
         </div>
      <% end %>
   </div>
   <div class="col-md-2"></div>
</div>